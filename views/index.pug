//- include main layout template
extends layout.pug

//- make page title dynamic
block variables
  - var title = `Portfolio Site - Home Page`

block content 
  article.grid-container.portfolio-intro
    div

      //- display main page title
      h1.homeTitle My Portfolio

      //- display sub-header title
      p.lead.text-light
        | What I learned in the last 5 months
  article.grid-container.portfolio-index
    
    .grid-x.grid-margin-x.small-up-2.medium-up-2.large-up-3

      //- loop through the projects object and 
      //- display each project
      each p in projects
        .cell
          a(href='/projects/'+p.id)
            img.thumbnail(src=`${p.image_thumbnail}`)
            h5= p.project_name